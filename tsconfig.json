{
    "compilerOptions": {
        "types": ["node"],
        "target": "ES2022",
        "moduleResolution": "Node",
        "module": "ES2022",
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "./built",
        "esModuleInterop": true,
        "baseUrl": "./src",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "*": [
                "./src/*",
                "./node_modules/*"
            ]
        }
    },
    "include": ["./src/**/*"],
    "ts-node": {
        "esm": true
    }
}